<openerp>
    <data>
        
        <record model="ir.ui.view" id="send_fax_wizard">
            <field name='name'>Send Fax</field>
            <field name='model'>fax.send_fax</field>
            <field name='arch' type='xml'>
                <form string='Send Fax'>
                    <group name="adapter">
                        <field name="adapter_id"/>
                    </group>
                    <group name="transmission">
                        <field name="fax_to_number"/>
                    </group>
                    <group name="payload">
                        <field name="name"/>
                        <field name="image" widget="image"/>
                    </group>
                    <footer>
                        <button special='cancel' string='Cancel'/>
                        <button name='send_fax' type='object'
                                string='Send' class='oe_highlight'/>
                    </footer>
                </form>
            </field>
        </record>
        
        <act_window id='send_fax_wizard_action'
                    name='Send Fax'
                    src_model='fax.adapter'
                    res_model='fax.send_fax'
                    view_mode='form'
                    target='new'
                    key2='client_action_multi'/>
        
    </data>
</openerp>
