<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add button for outgoing call -->
    <record id="partner_form_outgoing_call_form_view_cloudcti" model="ir.ui.view">
        <field name="name">res.partner.form.outgoing.call</field>
        <field name="model">res.partner</field>
        <field name="priority" eval="99"/>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="replace">
                <div class="o_row">
                    <field name="phone" widget="mask" data-inputmask="'mask': '(999) 999-9999'"/>
                    <button type="object" name="cloudcti_open_outgoing_notification" class="btn-sm btn-link mb4 fa fa-phone" aria-label="Outgoing Call" title="Outgoing Call" invisible="not phone" context="{'phone_partner': 1}" />
                </div>
            </xpath>
            <xpath expr="//field[@name='mobile']" position="replace">
                <div class="o_row">
                    <field name="mobile" widget="mask" data-inputmask="'mask': '(999) 999-9999'"/>
                    <button type="object" name="cloudcti_open_outgoing_notification" class="btn-sm btn-link mb4 fa fa-mobile" aria-label="Outgoing Call" title="Outgoing Call" invisible="not mobile" context="{'mobile_partner': 1}"/>
                </div>
            </xpath>
	        <xpath expr="/form/sheet/notebook/page/field[@name='child_ids']/form/sheet/group/group[2]/field[@name='phone']" position="replace">
                <label for="phone"/>
                <div class="o_row">
                    <field name="phone" widget="mask" data-inputmask="'mask': '(999) 999-9999'"/>
                    <button type="object" name="cloudcti_open_outgoing_notification" class="btn-sm btn-link mb4 fa fa-phone" aria-label="Outgoing Call" title="Outgoing Call" invisible="not phone" context="{'phone_partner': 1}" />
                </div>
            </xpath>
	        <xpath expr="/form/sheet/notebook/page/field[@name='child_ids']/form/sheet/group/group[2]/field[@name='mobile']" position="replace">
		        <label for="mobile"/>
                <div class="o_row">
                    <field name="mobile" widget="mask" data-inputmask="'mask': '(999) 999-9999'"/>
                    <button type="object" name="cloudcti_open_outgoing_notification" class="btn-sm btn-link mb4 fa fa-mobile" aria-label="Outgoing Call" title="Outgoing Call" invisible="not mobile" context="{'mobile_partner': 1}"/>
                </div>
	        </xpath>
        </field>
    </record>

    <record id="partner_form_outgoing_call_tree_view_cloudcti" model="ir.ui.view">
        <field name="name">res.partner.tree.outgoing.call</field>
        <field name="model">res.partner</field>
        <field name="priority" eval="99"/>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="after">
                    <button type="object" name="cloudcti_open_outgoing_notification" class="btn-sm btn-link mb4 fa fa-phone" aria-label="Outgoing Call" title="Outgoing Call" invisible="not phone" context="{'phone_partner': 1}" />
            </xpath>
        </field>
    </record>

    <record id="cloudcti_action_partners_tree_all" model="ir.actions.act_window">
        <field name="name">Partners</field>
        <field name="res_model">res.partner</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="base.view_partner_form"/>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="target">current</field>
    </record>

</odoo>
